<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.snappychat.profile.ProfileViewActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        >
    <com.snappychat.profile.RoundedImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/profilepicture"
        android:padding="25dp"

        android:scaleType="fitXY"

        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_icon"
            android:id="@+id/profile_picture_edit_icon"
            android:layout_gravity="bottom|right"
            android:layout_margin="40dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:gravity="center"
        android:textAlignment="center"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/about_me"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        />

    <TextView

        android:id="@+id/nick_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_nick_name"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/email"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/profession"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_edit_icon"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_profession"
        android:drawablePadding="10dp"
        />


    <TextView
        android:id="@+id/interests"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_edit_icon"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_interests"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:drawableRight="@drawable/ic_edit_icon"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_location"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:drawablePadding="10dp"
        android:id="@+id/visibility"
        android:drawableLeft="@drawable/ic_visibility"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_edit_icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:drawablePadding="10dp"
        android:id="@+id/notifications"
        android:drawableLeft="@drawable/ic_notification"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginLeft="15dp"
        android:drawableRight="@drawable/ic_edit_icon"
        />
    </LinearLayout>
</ScrollView>