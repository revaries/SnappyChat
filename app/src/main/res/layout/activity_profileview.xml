<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.snappychat.profile.ProfileViewActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/profilepicture"
        android:background="#7f8c8d"
        android:padding="3dp"
        android:scaleType="fitXY"

        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:gravity="center"
        android:textAlignment="center"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:gravity="center"
        android:textAlignment="center"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/email"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/about_me"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/profession"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_profession"
        android:drawablePadding="10dp"
        />


    <TextView
        android:id="@+id/interests"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_interests"/>

    <TextView
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_location"/>
    <TextView
        android:drawablePadding="10dp"
        android:id="@+id/visibility"
        android:drawableLeft="@drawable/ic_visibility"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true" />

    <TextView
        android:drawablePadding="10dp"
        android:id="@+id/notifications"
        android:drawableLeft="@drawable/ic_notification"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:clickable="true"
        />
    </LinearLayout>
</ScrollView>